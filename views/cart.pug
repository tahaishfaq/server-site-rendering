extends layout

block content
  h1 Shopping Cart
  - var total=0;
  table.table   
    thead 
      th  Product Name 
      th Price
      th Actions  
    tbody 
      each item in cart
        - total += Number(item.Price)
        tr 
          td=item.Name  
          td=item.Price
          td
            a(href="/products/cart/remove/"+item_id, class="btn btn-outline-danger") Remove Item 
          
    tfoot 
      tr 
        td Total 
        td=total      
        
                

 
 

